@model ppij_web_aplikacija.Models.Instrukcije.PredmetModel

<!DOCTYPE html>
<html>
<head>
    <title>@ViewBag.Title</title>
</head>
<body class="bootstrap-fix">
    <form class="form-inline" action=@("/instrukcije/" + ViewContext.RouteData.Values["kategorija_id"] + "/" 
                                                       + ViewContext.RouteData.Values["ustanova_id"]) method="post">
        <div class="container">
            <div class="row">
                <div class="col-xs-6 col-sm-6 col-sm-offset-3" style="text-align:center">
                    <hr />
                    <h3><b>Odaberi predmet:</b></h3>
                    <hr />
                    <div class="form-group">
                        <label>
                            Tražilica
                        </label>
                    </div>
                    <div class="form-group">
                        @Html.TextBoxFor(model => model.Trazilica, new { @class = "form-control" })
                    </div>
                    <div class="form-group">
                        <button class="btn btn-primary">
                            Traži
                        </button>
                    </div>

                </div>
            </div>
            <div class="row">
                <div class="col-xs-6 col-sm-6 col-sm-offset-3">
                    <hr />
                    <div class="list-group">
                        @foreach (var opis in Model.Opisi)
                        {
                            if (opis.BrojInstrukcija != 0)
                            {
                                <a href=@("/instrukcije/" + ViewContext.RouteData.Values["kategorija_id"] + "/" 
                                                          + ViewContext.RouteData.Values["ustanova_id"] + "/"
                                                          + opis.Predmet.ID_predmet) class="list-group-item">
                                    @opis.Predmet.naziv_predmet
                                    <span class="badge">@opis.BrojInstrukcija</span>
                                </a>}
                        }
                    </div>
                </div>
            </div>
        </div>
    </form>
</body>
</html>