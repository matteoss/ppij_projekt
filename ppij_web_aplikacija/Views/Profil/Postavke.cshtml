@model ppij_web_aplikacija.Osoba
<div>
    <h3>Promjena lozinke</h3>
    @using (Html.BeginForm())
    {
        @Html.ValidationSummary(true)
        <fieldset>
            <form method="post">
                <div class=" row top-buffer text-right ">
                    <div class="col-md-4 center-block">
                        <div>
                            <text>
                                <mark>Stara lozinka</mark>
                                @Html.EditorFor(model => model.ime_osoba)
                            </text>
                        </div>
                        <div>
                            <text>
                                @Html.ValidationMessageFor(model => model.ime_osoba)
                                @Html.ValidationMessage("error_kor_ime")
                            </text>
                        </div>
                    </div>
                    <div class="col-md-4 center-block mali-razmak-gore">
                        <div>
                            <text>
                                <mark>Nova lozinka</mark>
                                @Html.PasswordFor(model => model.lozinka)
                            </text>
                        </div>
                        <div>
                            <text>
                                @Html.ValidationMessageFor(model => model.lozinka)
                                @Html.ValidationMessage("error_loz")
                            </text>
                        </div>
                    </div>
                    <div class="col-md-4 center-block mali-razmak-gore">
                        <div>
                            <text>
                                <mark>Ponovljena nova lozinka</mark>
                                @Html.PasswordFor(model => model.lozinka)
                            </text>
                        </div>
                        <div>
                            <text>
                                @Html.ValidationMessageFor(model => model.lozinka)
                                @Html.ValidationMessage("error_loz")
                            </text>
                        </div>
                    </div>
                </div>
                <div class="text-center">
                    <input type="submit" class="btn btn-default" value="Login &raquo;" t /> <br />
                </div>
            </form>
        </fieldset>
    }
</div>
